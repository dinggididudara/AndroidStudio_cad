<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="283dp"
        android:layout_height="62dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/currencymain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:fontFamily="@font/thesusu"
            android:gravity="center"
            android:text="현재 날짜/시간: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/timeDate"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:fontFamily="@font/thesusu"
            android:gravity="center"
            android:text="..."
            android:textSize="24sp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/currencymain"
        android:layout_width="226dp"
        android:layout_height="437dp"
        android:layout_marginBottom="84dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/cad"
            android:layout_width="226dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/thesusu"
            android:gravity="center"
            android:hint="CAD"
            android:imeOptions="actionSend"
            android:inputType="number"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:alpha="0.6"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/exchange" />

        <EditText
            android:id="@+id/won"
            android:layout_width="226dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/thesusu"
            android:gravity="center"
            android:hint="WON"
            android:imeOptions="actionSend"
            android:inputType="number"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:alpha="0.6"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/exchange" />

        <EditText
            android:id="@+id/usd"
            android:layout_width="226dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:ems="10"
            android:fontFamily="@font/thesusu"
            android:gravity="center"
            android:hint="USD"
            android:imeOptions="actionSend"
            android:inputType="number"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/refresh"
            android:layout_width="160dp"
            android:layout_height="45dp"
            android:background="@drawable/square"
            android:fontFamily="@font/thesusu"
            android:text="새로고침!"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/refreshimage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="left"
            android:alpha="0.7"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/refresh" />

    </LinearLayout>

    <TextView
        android:id="@+id/maintitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:fontFamily="@font/thesusu"
        android:text="환율 계산기!"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.058"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="266dp"
        android:layout_marginLeft="266dp"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/thesusu"
        android:text="by dinggididudara"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="292dp"
        android:layout_marginLeft="292dp"
        android:layout_marginTop="44dp"
        android:alpha="0.8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cadwonusdtransnocloud" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:layout_width="150dp"
        android:layout_height="49dp"
        android:background="@drawable/square"
        android:fontFamily="@font/thesusu"
        android:text="Clear"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="125dp"
        tools:layout_editor_absoluteY="665dp" />

</androidx.constraintlayout.widget.ConstraintLayout>